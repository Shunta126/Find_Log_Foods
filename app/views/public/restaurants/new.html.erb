<div class="row justify-content-center">
  <h3>新規投稿</h3>
</div>

<div class="row justify-content-center">
     <%= form_with model: @restaurant, url: restaurants_path, local: true, method: :post do |f| %>
   <table>
         <tr>
           <th>名前(ニックネーム)</th>
           <td><%= f.text_field :name, placeholder: "foodfighter" %></td>
         </tr>

         <tr>
           <th>年齢</th>
           <td><%= f.text_field :age,  placeholder: "20" %></td>
         </tr>

         <tr>
           <th>プロフィール画像</th>
           <td><%= f.file_field :customer_image, accept: "image/*" %></td>
         </tr>

         <tr>
           <th>自己紹介(任意)</th>
           <td><%= f.text_area :body, placeholder: "ラーメンが大好きです！！" %></td>
         </tr>

         <tr>
           <th>メールアドレス</th>
           <td><%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %></td>
         </tr>

         <tr>
           <th>パスワード(6文字以上)</th>
           <td><%= f.password_field :password, placeholder: "パスワード"  %></td>
         </tr>

         <tr>
           <th>パスワード(確認用)</th>
           <td><%= f.password_field :password, placeholder: "確認用"  %></td>
         </tr>

         <tr>
           <td><%= f.submit "新規登録" %></td>
         </tr>

   </table>
    <% end %>
</div>