<div class="row justify-content-center">
  <h3>新規投稿</h3>
</div>

<div class="row justify-content-center">
     <%= form_with model: @restaurant, url: restaurants_path, local: true, method: :post do |f| %>
   <table>
         <tr>
           <th>投稿写真</th>
           <td><%= f.text_field :food_image, accept: "image/*" %></td>
         </tr>

         <tr>
           <th>店名</th>
           <td><%= f.text_field :restaurant_name,  placeholder: "ラーメン横綱" %></td>
         </tr>

         <tr>
           <th>所在地</th>
           <td><%= f.file_field :place, accept: "東京都新宿区歌舞伎町1-2-21" %></td>
         </tr>

         <tr>
           <th>料理ジャンル</th>
           <td><%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択して下さい--" %></td>
         </tr>

         <tr>
           <th>料理名</th>
           <td><%= f.text_field :food_name, placeholder: "関脇ラーメン" %></td>
         </tr>

         <tr>
           <th>料金</th>
           <td><%= f.text_field :price, placeholder: "1000"  %>円</td>
         </tr>

         <tr>
           <th>感想</th>
           <td><%= f.text_area :body, placeholder: "関脇ラーメンでもかなりの量があるので注意してください!!" %></td>
         </tr>

         <tr>
           <td><%= f.submit "新規登録" %></td>
         </tr>

   </table>
    <% end %>
</div>